<resources>

    <!-- >>>>>>>>>>>>>>>Material based styles -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here.
        assign parameters like colors to displayed objects-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
    </style>


    <!-- >>>>>>>>>>>>>Non material styles -->
    <style name="AppCompatEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/cursor</item>
        <item name="android:background">@drawable/edittextoutlined</item>"
    </style>

    <style name="AppCompatButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppCompatButtonfaded" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorSecondaryBBright</item>
        <item name="colorOnPrimary">@color/white</item>"
        <item name="colorButtonNormal">@color/colorSecondaryBBright</item>
    </style>

</resources>
