<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal|vertical"
    android:fadingEdgeLength="10dp"
    android:outlineProvider="bounds"
    >


    <EditText
        android:id="@+id/givenText"
        style="@style/AppCompatEditText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="12"
        android:hint=" type your message ..."
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:singleLine="false"
        app:layout_constraintBottom_toTopOf="@+id/keyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <EditText
        android:id="@+id/keyText"
        style="@style/AppCompatEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:hint=" key here"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/givenText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resultText"
        style="@style/AppCompatEditText"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="12"
        android:imeOptions="actionNext"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:singleLine="false"
        app:layout_constraintEnd_toStartOf="@+id/copybutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/givenText"
        app:layout_constraintTop_toBottomOf="@+id/phoneText" />

    <Button
        android:id="@+id/sendbutton"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:onClick="Send"
        android:text="Send"
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneText"
        app:layout_constraintEnd_toEndOf="@+id/givenText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/resultText" />

    <EditText
        android:id="@+id/phoneText"
        android:layout_width="170dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint=" phone no"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="9"
        app:layout_constraintStart_toStartOf="@+id/givenText"
        app:layout_constraintTop_toBottomOf="@+id/keyText" />

    <Button
        android:id="@+id/copybutton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:onClick="Copy"
        android:text="Copy"
        app:layout_constraintEnd_toEndOf="@+id/givenText"
        app:layout_constraintTop_toBottomOf="@+id/phoneText" />

</androidx.constraintlayout.widget.ConstraintLayout>