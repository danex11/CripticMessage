<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal|vertical"
    android:fadingEdgeLength="10dp"
    android:outlineProvider="bounds"
    android:background="@color/windowBackground">

    <!-- input EditText -->


    <!--
 app:startIconContentDescription="icon description"
    app:startIconDrawable="@drawable/ic_launcher_foreground"
      -->

    <!-- key EditText -->

    <EditText
        android:id="@+id/givenText"
        style="@style/AppCompatEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/padlockclosedsmall"
        android:ems="12"
        android:hint="coded message"
        android:inputType="text"
        android:maxLines="5"
        android:paddingLeft="10dp"
        android:paddingTop="24dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pastebutton"
        tools:text="gNIb35/w8bR8sjN481QYgrglx/kgUPh" />

    <EditText
        android:id="@+id/keyText"
        style="@style/AppCompatEditText"
        android:background="@drawable/keysmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:padding="3dp"
        android:ems="6"
        android:hint=" key here"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/givenText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/givenText"
        tools:ignore="MissingConstraints" />

    <!-- "result" label -->

    <!-- result Text -->

    <EditText
        android:id="@+id/resultlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="result"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/resultText"
        app:layout_constraintTop_toBottomOf="@+id/keyText" />

    <EditText
        android:id="@+id/resultText"
        style="@style/AppCompatEditText"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:imeOptions="actionNext"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/givenText"
        app:layout_constraintTop_toBottomOf="@+id/resultlabel" />

    <Button
        android:id="@+id/copybutton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginTop="59dp"
        android:onClick="Copy"
        android:text="Copy"
        app:layout_constraintStart_toStartOf="@+id/clearbutton"
        app:layout_constraintTop_toTopOf="@+id/clearbutton" />

    <Button
        android:id="@+id/clearbutton"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:onClick="ClearOnButton"
        android:text="Clear"
        app:layout_constraintEnd_toEndOf="@+id/givenText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/resultText"
        app:layout_constraintTop_toBottomOf="@+id/resultText"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/pastebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:onClick="Paste"
        android:text="Paste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>